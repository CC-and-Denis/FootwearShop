{% extends 'pageFrame.html.twig' %}

{% block title %}
    Nike Air Force Limited edition
{% endblock %}


{% block style %}
<style>
    .background{
        /*background-image:  radial-gradient(rgb(240, 206, 255), rgb(200, 206, 255))*/
    }

    .mainImage{
        width: 20vh;
        height: 20vh;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        border-radius: 12px ;
    }

    .slideShowContainer{
        height: 40vh;
        margin-top: 0vh;
        margin-bottom: 1.5vh;
        width: 90vw;
        background-color: rgba(255,255,255,0.2);
        backdrop-filter: blur(20px);
        border-radius: 20px;

    }

    .slideShowContainer>img{
        height: 5vh;
        width: 5vh;
    }

    .slideShowContainer2>:last-child{
        margin-right: 0vw;
    }

    .slideShowContainer2{
        width: 80vw;
        margin-left: 1vw;
        margin-right: 1vw;

    }
    .previewImages{
        background-color: rgba(255,255,255,0.5);
        border-radius: 18px;
        background-position: center;
        background-repeat: no-repeat;
        background-size:contain;
        height: 38vh;
        width: 100vh;
        margin-right: 2vw;
    }

    .container{
        background-color: rgba(255,255,255,0.2);
        backdrop-filter: blur(35px);
        border-radius: 20px;
        padding: 2vh;
        height: 50vh;
    }

    .container>.row>.column{
        margin-left: 1vw;
        height: 20vh;
        width: 10vw;
        font-size: large;
    }
    #title{
        font-size:1vw;
        margin-bottom: 3vh;
        margin-top: 3vh;
    }

    .container>.row>.column>.row{
        background-color: rgba(255,255,255,0.5);
        width: fit-content;
        padding: 0.5vh 1vh;
        border-radius: 100px;
    }

    #description{
        height: 23vh;
        overflow-y: scroll;
        padding-right: 1vh;
        
    }

    #vendor{
        text-decoration: underline;
        margin-top: 2vh;
    }

    .aButton{
        margin-top: 1vh;
    }


</style>
{% endblock %}

{% block javascripts %}

{% endblock %}

