{% extends 'base.html.twig' %}

{% block title %}
    FS
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="/CSS/mainStyle.css">
{% endblock %}

{% block javascripts %}
<script>
    window.onload=function(){
        window.location.href = "access/login";
    }
</script>
{% endblock %}

{% block style %}
<style>
    *{
        color: white
    }
    @import url('https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&family=Rubik+Glitch&display=swap');
    .title{
        text-align: center;;
        font-family: "Rubik Glitch", system-ui;
        font-weight: 400;
        font-style: normal;
        font-size: 3.8vw;
}


.center {
  position: relative; /* for pseudo-element positioning */
  background-image: url('/Images/loginBackground.jpg'); /* your background image */
  background-size: cover; /* make the image cover the entire container */
  background-position: center;
  z-index: 1;
}

.loginBox{
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: rgba(255, 255, 255, 0.4);
    height: 75vh;
    width: 30vw;
    border-radius: 20px;
    box-shadow: 5px 5px 5px 5px rgba(0, 0, 0, 0.2);
    padding: 2.5vh;;
    z-index: 3;
    backdrop-filter: blur(10px);
}

form{
    display: flex;
    flex-direction: column;
    align-items: center;
}

.column>.row{
    margin-top: 2vh;
    border-bottom: 2px solid #CFCFCF;
    padding-bottom: -10px;
}



.column{
    margin-top: 5vh;
}

.row>img{
    height: 5vh;
    width: 4.8vh;
    margin-bottom: 0.2vh;
}

input{
    background-color: rgba(0, 0, 0 , 0);
    border: 0px;
    padding-top: 1.5vh;
    padding-bottom: 1vh;
    padding-left: 1vw;
    width: 25vw ;
    font-size: 2vh;
}


input:focus{
    background-color: rgba(0, 0, 0 , 0);
    outline: none;
}

.double ~ div{
    width: 10vw;
}

#rememberMe{
    margin-right: 1vw;
    width: 2vh;
    height: 2vh;
}

#rememberMe+label{
    font-size: 1.5vh;
}




</style>
{% endblock %}

{% block body %}
    <div class="center" >
        <div class="loginBox">

            <div class="title">FootwearShop</div>

            {% block content %}
            {% endblock %}
        </div>
        </div>
    
    </div>
</body>
{% endblock %}