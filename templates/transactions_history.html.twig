{% extends 'bases/page_frame.html.twig' %}

{% block title %}
    TRANSACTION RIEPILOGUE
{% endblock %}

{% block style %}
<style>
    body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .grid-container {
            display: grid;
            grid-template-columns: repeat(3, auto);
            row-gap: 2vh;
            column-gap: 1vw;
            padding: 2vh;
        }



        /* Image styling */
        .grid-item img {    
            width: 100px;
            height: 100px;
            object-fit: cover;
        }

        /* Item details */
        .item-details {
            margin-left: 20px;
        }

        /* Numbering inside the box */
        .grid-item::before {
            content: attr(data-number);
            position: absolute;
            top: 10px;
            left: 10px;
            font-size: 20px;
            font-weight: bold;
        }

        .item-details .date,
        .item-details .product,
        .item-details .price {
            margin-bottom: 10px;
        }

        .item-details .product {
            font-weight: bold;
        }
        .item-details .product {
            font-weight: bold;
            font-color: blue;
        }

        .item-details .price {
            color: green;
            font-weight: bold;
        }
</style>
{% endblock %}

{% block content %}

    <div>
        <div class="grid-container">
            {% for transaction in transactions %}
                <div class="container">
                    <div class="item-details">
