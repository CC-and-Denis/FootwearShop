{% block style %}
<style>
    body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .grid-container {
            display: grid;
            grid-template-columns: repeat(2, auto);
            row-gap: 1h;
            column-gap: vw;
        }

        .grid-item {
            backdrop-filter: blur(35px);
            display: flex;
            justify-content: space-between;
            border: 1px solid black;
            padding: 20px;
            position: relative;
        }

        /* Image styling */
        .grid-item img {    
            width: 100px;
            height: 100px;
            object-fit: cover;
        }

        /* Item details */
        .item-details {
            margin-left: 20px;
        }

        /* Numbering inside the box */
        .grid-item::before {
            content: attr(data-number);
            position: absolute;
            top: 10px;
            left: 10px;
            font-size: 20px;
            font-weight: bold;
        }

        .item-details .date,
        .item-details .object-name,
        .item-details .price {
            margin-bottom: 10px;
        }

        .item-details .object-name {
            font-weight: bold;
        }

        .item-details .price {
            color: green;
            font-weight: bold;
        }
</style>
{% endblock %}

