{% extends 'bases/page_frame.html.twig' %}

{% block title %}
    Nike Air Force Limited edition
{% endblock %}


{% block javascripts %}
{{parent()}}
{{ encore_entry_script_tags('products') }}
{% endblock %}


{% block style %}
<style>
    .column.container.center{
        width: 20vw;
        background-color: white;
    }
    
    form label,select,input{
        margin:1vh 0vh;
        font-size: larger;
        background-color: white;
        
    }

    .column.container.center>h1{
        font-size: 5vh;
        margin-bottom: 2vh;
    }

    form input,select{
        border: none;
        outline: none;
        border-bottom: 1px solid black;
    }

    .column.container.center>button{
        margin-top: 1vh;
    }
    
    

    select{
        margin-right: 0.5vw;
    }

    #payment_cvc{
        width: 4.5vw;
    }
</style>
{% endblock %}

{% block alerts %}

    {% if (product.quantity - product.itemsSold)>0 %}
    {% if form.cardNumber.vars.errors | length %}
    <div id="errorsAlert" class="column">
        <div id="closeErrors">
            x
        </div>
        {% for error in form.cardNumber.vars.errors %}
            <div class="error">{{ error.message }}</div>
        {% endfor %}
    </div>
{% endif %}
        {{form_start(form)}}
            <div class="column container center" >
                <h1>Payment</h1>
                    <div class="reverseColumn">
                        {{ form_widget(form.ccOwner) }}
                        <label>Credit card owner</label>
                    </div>
                <div class="reverseColumn">
                    {{ form_widget(form.addressCountry) }}
                    <label>Country</label>
                </div>
                <div class="reverseColumn">
                    {{ form_widget(form.addressCity) }}
                    <label>City</label>
                </div>
                <div class="reverseColumn">
                    {{ form_widget(form.addressPostal) }}
                    <label>Postal address</label>
                </div>
                    <div class="reverseColumn">
                        {{ form_widget(form.cardNumber) }}
                        <label>Cardnumber</label>
                    </div>
                    <div class="reverseColumn">
                    <div class="row">
                        {{form_widget(form.expMonth)}}
                        {{form_widget(form.expYear)}}
                    </div>
                    <label>Expiration Date</label>
                    </div>

                    <div class="reverseColumn">
                        {{ form_widget(form.cvc) }}
                        <label for="payment_cvc">CVC/CVV</label>
                    </div>

                    <button type="submit" style="width: 9vw;">Buy the article</button>   
                
                
                    <div class="column">
                        
                    </div>
            </div>
        {{ form_end(form) }}
    {% endif %}
{% endblock %}


{% block content %}
    <div class="column size-full lg:p-5 p-2 lg:h-[100vh] overflow-y-hidden h-fit">
            <div id="carouselPreviews" class="slider std-container row centered w-full h-[43vh] mb-5">
                
            </div>

    

        <div class="row  w-full flex-wrap lg:h-[50vh] h-fit lg:mt-0 gap-7">
            <div class="column std-container lg:w-fit h-full w-full mx-auto" >
                <div class="row flex-wrap">
                    <div class="bg-cover bg-center bg-no-repeat rounded-2xl lg:size-[20vh] size-[10vh] left-0 relative mr-5 mb-10" style="background-image: url({{asset( product.mainImage )}});"></div>
                    <div class="column">
                        <div class="w-52 text-lg my-7">
                            {{product.model}}
                        </div>
                        <div class="row priceContainer text-sm">
                            <div id="currency">
                                â‚¬
                            </div>
                            <div id="price">
                                {{product.price}}
                            </div>
                        </div>
                    </div> 
                    <div class="column lg:w-fit w-full my-7">
                        <a class="aButton w-full p-2" id="buyButton1"> Buy now</a>
                    </div>
                </div>

                    <div class="column relative lg:mt-0 mt-10 h-full">
                        {{product.description}}
                    </div>
                    <a href="/user/{{product.sellerusername.username}}"id="vendor">
                        {{product.sellerusername.username}}
                    </a>

                <input type="hidden" id='product_type' value={{product.type}}>
                <input type="hidden" id='product_material' value={{product.material}}>
                
            </div>

            <div class="column w-fit">
                {% include 'components/carousel_component.html.twig' with {
                    width: 'w-[45vw]',
                    title: 'Similar',
                    type: 'Similar',
                    link: 'similar'
                } %}
            </div>
        </div>
    </div


        <div id="hiddenOtherImages" class="hidden absolute">
            {% for img in product.otherImages%}
            <div>
                {{img}}
            </div>
        {% endfor %}
        </div>
    </div>
{% endblock %}