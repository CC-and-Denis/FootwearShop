{% use 'form_div_layout.html.twig' %}



{% block form_widget_simple %}
    {%- set additionalClass = '' -%}
    {%- set type = type|default('text') -%}
    {%- if type == 'range' or type == 'color' -%}
        {# Attribute "required" is not supported #}
        {%- set required = false -%}
    {%- endif -%}
    {%- if type =='file' -%}
        {%- set additionalClass = 'absolute opacity-0' -%}
    {%- endif -%}
    <input type="{{ type }}" class="w-full {{additionalClass}}" {{ block('widget_attributes') }} {% if value is not empty %}value="{{ value }}" {% endif %}/>
{% endblock %}





