{% extends 'bases/access_page.html.twig' %}

{% block title%}
Login
{% endblock %}


{% block content %}
<form method="post">
    {% if error %}
        <div class="row">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="row" style="">
            You are logged in as {{ app.user.userIdentifier }},
        </div>

        <a class="aButton" href="/home">Home</a>
        <a class="aButton" href="/access/logout" style="background-color: red;">Log out</a>

    {% else %}
    <div class="column">
        <label for="inputUsername">Username</label>
        <div class="row">
            <img src="{{asset('/build/Images/user-regular.246ab86a.png')}}">
            <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" autocomplete="username" required autofocus>
        </div>
        </div>
        
        <div class="column">
            <label for="inputPassword">Password</label>
            <div class="row">
                <img src="{{asset('/build/Images/key-solid.792a57bf.png')}}">
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
            </div>
        
        </div>
        
    
        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >
    
        <div class="column">
            <label for="_remember_me" style="text-align: center;">
                Remember me
            </label>
            <input type="checkbox" name="_remember_me"> 
            
        </div>
    
        <button class="btn btn-lg btn-primary" type="submit">
            Sign in
        </button>
    </form>
    <div class="row">
        <div id="login" class="aButton" style="border-radius:17px 0px 0px 17px ;">
            Login
        </div>
    <a href="/signup" id="SignUp" class="aButton" style="border-radius:0px 17px 17px 0px; opacity: 0.5;">
            Sign up
    </a>
    {% endif %}
    


{% endblock %}
