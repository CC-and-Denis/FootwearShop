{% extends 'bases/base.html.twig' %}

{% block title %}
    FS
{% endblock %}

{% block stylesheets %}
    {{parent()}}
    {{ encore_entry_link_tags('frame') }}
{% endblock %}

{% block javascripts %}
    {{parent()}}
    {{ encore_entry_script_tags('frame') }}
{% endblock %}

{% block body %}
<div id="overlay" class="h-[100vh] w-full overflow-x-hidden opacity-0 hidden column absolute bg-[rgba(0,0,0,0.5)] backdrop-blur-sm items-center lg:pt-40 pt-[6vh] z-30 overflow-y-hidden">
    <img src="{{ asset('build/images/circle-chevron-left-solid.a5e7fe27.png')}}" class="absolute lg:left-32 left-5 top-5 size-20 buttonForSearch hover:cursor-pointer hover:scale-110 transition-all">
    <div id="alertsContainer">
    {% block alerts %}

    {% endblock %}
    </div>

    <div id="searchMountPoint" class="w-full flex flex-col items-center overflow-y-scroll lg:h-[80vh] h-[88vh] relative flex-shrink-0"></div>
    

</div>
<div class="row background size-full overflow-auto " >
    <div id="show-navigation" class="absolute top-1/2 left-0 bg-white bg-opacity-70 py-10 pr-5 pl-2 z-20 hidden">
        ->
    </div>
    <div id="sidebar" class="column bg-semi-transparent-2 h-full w-36 z-10 lg:items-baseline items-center backdrop-blur-md">
        <div class="column w-max " >
                <input id="searchContainerCheckbox" type="checkbox" class="hidden">
                    <img class="hover:scale-125 ml-3 max-w-14 buttonForSearch transition-all hover:cursor-pointer " src="{{ asset('/build/images/magnifying-glass-solid.2b32bcc1.png')}}" class="buttonForSearch">
                
        </div>
        <div class="column font-normal text-xl">
            <a href="/home">Home</a>
            <a href="/fyp">For you</a>
            <a href="/populars">Popular</a>
        </div>
        
        <div class="column text-gray-400 font-extralight text-lg">
            <a>About</a>
            <a href="/support">Support</a>
            <a>Copyright</a>
            <a class="generic-img size-20 rounded-full bg-semi-transparent-1 mt-8" style="background-image: url({{ asset('build/images/user-regularB.df1377b9.png')}});" href=
            {% if app.user %}
                "/user/{{app.user.userIdentifier}}"
                {% else %}
                    "/login"
                {% endif %}
                >
                </a>
        </div>
        </div>

        <div class="w-full">
            {% block content %}
            {% endblock %}
        </div>


    </div>

{% endblock %}