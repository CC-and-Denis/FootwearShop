{% block body %}
<div id="searchContainer">
    <img src="{{ asset('build/images/circle-chevron-left-solid.a5e7fe27.png')}}" style="height: 10vh;width: 10vh; position: absolute; top: 0; left: 0; margin-top: 2vh; margin-left: 10vw;" class="buttonForSearch">
    <div id="alertsContainer">
    {% block alerts %}

    {% endblock %}
    </div>
    <div class="row" id="searchBarContainer" > 
        <div>
            <input id="filterMenuCheckbox" type="checkbox" style="opacity: 0;position: absolute;">
            <label for="filterMenuCheckbox">
                <img src="{{ asset('/build/images/filter-solid.8f86f99e.png')}}"></label>
            
        </div>
        <input type="text">
        <div>
            <img src="{{ asset('/build/images/magnifying-glass-solid.2b32bcc1.png')}}">
        </div>
    </div>
    <div id="filterMenu">
        <div class="column">
            Gender
            <div class="row">
                <label>
                    <input type="checkbox" id="maleCheckbox">Male
                </label>
            </div>
            
            <label>
                <input type="checkbox" id="femaleCheckbox">Female
            </label>
            <label>
                <input type="checkbox" id="femaleCheckbox">Unisex
            </label>
        </div>

        <div class="column">
            Age
            <label>
                <input type="checkbox" id="maleCheckbox">Kid
            </label>
            <label>
                <input type="checkbox" id="femaleCheckbox">Adult
            </label>
        </div>


    </div>
</div>
<div class="row background" >
    <div class="sidebar">
        <div class="column w-max" >
                <input id="searchContainerCheckbox" type="checkbox" class="hidden" >
                    <img class="small-img buttonForSearch" src="{{ asset('/build/images/magnifying-glass-solid.2b32bcc1.png')}}" class="buttonForSearch">
                
        </div>
        <div class="column">
            <a href="/home">Home</a>
            <a href="/fyp">For you</a>
            <a href="/populars">Popular</a>
        </div>
        
        <div class="column" id="bottom">
            <a>About</a>
            <a>Support</a>
            <a>Copyright</a>
            <a id="userImage" class="userImage" style="background-image: url({{ asset('build/images/user-regularB.df1377b9.png')}});" href=
            {% if app.user %}
                "/user/{{app.user.userIdentifier}}"
            {% else %}
                "/login"
            {% endif %}
            >
        </a>


        </div>

    </div>
    <div>
        {% block content %}
        {% endblock %}
    </div>


</div>

{% endblock %}