{% extends 'bases/base.html.twig' %}

{% block title %}
    FS
{% endblock %}

{% block stylesheets %}
    {{parent()}}
    {{ encore_entry_link_tags('frame') }}
    <style>
        .genre-selection-container {
            position: relative;
            display: inline-block;
        }

        .select-genres-button {
            padding: 10px;
            background-color: #4CAF50;
            color: white;
            border: none;
            cursor: pointer;
        }

        .genres-dropdown {
            display: none; /* Hidden by default */
            position: absolute;
            background-color: white;
            min-width: 200px;
            border: 1px solid #ddd;
            box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.2);
            z-index: 1;
            max-height: 300px;
            overflow-y: auto;
        }

        .genres-list {
            padding: 10px;
        }

        .genres-list label {
            display: block;
            padding: 5px 0;
            cursor: pointer;
        }

        .submit-genres-button {
            padding: 10px;
            background-color: #f44336;
            color: white;
            border: none;
            cursor: pointer;
            width: 100%;
            text-align: center;
        }

    </style>
{% endblock %}

{% block javascripts %}
    {{parent()}}
    {{ encore_entry_script_tags('frame') }}
{% endblock %}

{% block body %}
<div id="overlay" class="size-full overflow-x-hidden opacity-0 hidden column absolute bg-[rgba(0,0,0,0.5)] backdrop-blur-sm items-center pt-40 z-30">
    <img src="{{ asset('build/images/circle-chevron-left-solid.a5e7fe27.png')}}" class="absolute left-0 top-0 size-20 mt-5 ml-32 buttonForSearch">
    <div id="alertsContainer">
    {% block alerts %}

    {% endblock %}
    </div>

    <div id="filterOptions"></div>



</div>
<div class="row background size-full overflow-auto " >
    <div id="show-navigation" class="absolute top-1/2 left-0 bg-white bg-opacity-70 py-10 pr-5 pl-2 z-20 hidden">
        ->
    </div>
    <div id="sidebar" class="column bg-semi-transparent-2 h-full w-36 z-10 lg:items-baseline items-center backdrop-blur-md">
        <div class="column w-max " >
                <input id="searchContainerCheckbox" type="checkbox" class="hidden" >
                    <img class="ml-3 max-w-14 buttonForSearch" src="{{ asset('/build/images/magnifying-glass-solid.2b32bcc1.png')}}" class="buttonForSearch">
                
        </div>
        <div class="column font-normal text-xl">
            <a href="/home">Home</a>
            <a href="/fyp">For you</a>
            <a href="/populars">Popular</a>
        </div>
        
        <div class="column text-gray-400 font-extralight text-lg">
            <a>About</a>
            <a>Support</a>
            <a>Copyright</a>
            <a class="generic-img size-20 rounded-full bg-semi-transparent-1 mt-8" style="background-image: url({{ asset('build/images/user-regularB.df1377b9.png')}});" href=
            {% if app.user %}
                "/user/{{app.user.userIdentifier}}"
                {% else %}
                    "/login"
                {% endif %}
                >
                </a>
            </div>

        </div>

        <div class="w-full">
            {% block content %}
            {% endblock %}
        </div>


    </div>

{% endblock %}