{% extends 'bases/access_page.html.twig' %}

{% block title%}
Sign up
{% endblock %}

{% block alerts %}
    {% if form_errors(registrationForm)%}
        <div id="errorsBox">
            <div class="closeErrorsBtn">
                x
            </div>
            {{ form_errors(registrationForm) }}

        </div>
    {% endif %}
{% endblock %}

{% block content %}
    

    {{ form_start(registrationForm) }}
    <div class="centered column">
    <div class="column w-[30rem]">
        <label>Email</label>
        <div class="row">
            <img class="small-img" src="{{asset('/build/images/envelope-regular.8640d6ad.png')}}">
            {{ form_widget(registrationForm.email) }}
        </div>
    </div>
    <div class="column  w-[30rem]">
        <label for="username">Username</label>
        <div class="row">
            <img class="small-img" src="{{asset('/build/images/user-regular.246ab86a.png')}}">
            {{ form_widget(registrationForm.username) }}
        </div>
    </div>
    <div class="row">
        <div class="column w-[14rem]">
            <label>Password</label>
            <div class="row">
                <img class="small-img" id="passwordImage" src="{{asset('/build/images/key-solid.792a57bf.png')}}">
                {{ form_widget(registrationForm.password.first) }}
            </div>
        </div>
    
        <div class="column ml-10 w-[14rem]">
            <label> Confirm password</label>
            <div class="row">
                <img class="small-img" src="{{asset('/build/images/key-solid.792a57bf.png')}}">
                {{ form_widget(registrationForm.password.second) }}
            </div>
        </div>
    </div>
    <button type="submit" class="aButton py-2 my-10">Register</button>
    {{ form_end(registrationForm) }}

    <div class="row">
        <a href="/login" class="aButton opacity-50  rounded-none rounded-l-xl">
            Login
        </a>
    <div class="aButton rounded-none rounded-r-xl">
            Sign up
    </div>
</div>

{% endblock %}
