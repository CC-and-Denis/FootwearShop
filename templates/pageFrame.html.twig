{% extends 'base.html.twig' %}

{% block title %}
    FS
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="/CSS/mainStyle.css">
    <link rel="stylesheet" href="/CSS/frame.css">
    <script src="/JS/frame.js"></script>

{% endblock %}

{% block javascripts %}
{% endblock %}




{% block style %}
{% endblock %}

{% block body %}
<div id="searchContainer">
    <label for="searchContainerCheckbox">
        <img src="/Images/circle-chevron-left-solid.png" style="height: 10vh;width: 10vh; position: absolute; top: 0; left: 0; margin-top: 2vh; margin-left: 10vw;">
    </label>
    <div class="row" id="searchBarContainer"> 
        <div>
            <input id="filterMenuCheckbox" type="checkbox" onchange="displayFilters()" style="opacity: 0;position: absolute;">
            <label for="filterMenuCheckbox">
                <img src="/Images/filter-solid.png"></label>
            
        </div>
        <input type="text">
        <div>
            <img src="/Images/magnifying-glass-solid.png">
        </div>
    </div>
    <div id="filterMenu">
        <div class="column">
            Gender
            <label>
                <input type="checkbox" id="maleCheckbox">Male
            </label>
            <label>
                <input type="checkbox" id="femaleCheckbox">Female
            </label>
            <label>
                <input type="checkbox" id="femaleCheckbox">Unisex
            </label>
        </div>

        <div class="column">
            Age
            <label>
                <input type="checkbox" id="maleCheckbox">Kid
            </label>
            <label>
                <input type="checkbox" id="femaleCheckbox">Adult
            </label>
        </div>


    </div>
</div>
<div class="row background">
    <div class="sidebar">
        <div class="column" id="top">
            <div>
                <input id="searchContainerCheckbox" type="checkbox" onchange="displaySearch()" style="opacity: 0;position: absolute;">
                <label for="searchContainerCheckbox">
                    <img src="/Images/magnifying-glass-solid.png"></label>
                
            </div>
        </div>
        <div class="column">
            <a href="/home">Home</a>
            <a href="fyp">For you</a>
            <a href="popular">Popular</a>
            <a>Man</a>
            <a>Woman</a>
            <a>Child</a>
        </div>
        
        <div class="column" id="bottom">
            <a>About</a>
            <a>Support</a>
            <a>Copyright</a>
            <a href="/shoppingcart"><img src="/Images/cart-shopping-solid.png"></a>
            <a id="userImage" class="userImage" style="background-image: url(/Images/user-regularB.png);" href="/user/{{app.user.userIdentifier}}"></a>


        </div>

    </div>
    <div>
        {% block content %}
        {% endblock %}
    </div>


</div>

{% endblock %}