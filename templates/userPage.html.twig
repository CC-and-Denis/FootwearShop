{% extends 'pageFrame.html.twig' %}

{% block title %}
 {{username}} profile
{% endblock %}


{% block style %}
<style>


.container{
        background-color: rgba(255,255,255,0.2);
        backdrop-filter: blur(35px);
        border-radius: 20px;
        padding: 2vh 5vh;
        height: 88vh;

}

#profilePic{
    width: 20vh;
    height: 20vh;
    margin-bottom: 2vh;
}

#rating{
    background-color: rgba(255,255,255,0.5);
        backdrop-filter: blur(35px);
        border-radius: 18px;
        padding: 2vh 5vh;
        height: 40vh;
        width: 15vw;

}

#rating>h1{
    display: block;
    font-size: 4vh;
    text-align: center;
    font-weight: 400;
}

#userName{
    font-size: 4vh;
    margin-bottom: 2vh;
    font-weight: 600;
    color: rgba(255,255,255,1);
}

.aButton{
    margin-top: 2vh;
    height: 3vh;
    padding-top: 0.3vh;
    padding-bottom: 0vh;
}


</style>
{% endblock %}


{% block content %}
<div class="row" style="padding: 5vh;overflow-x: hidden;
    overflow-y: hidden;">

    <div class="column container" style=" width: 20vw;margin-right: 2.9vh; align-items: center;">
        <div id="profilePic" class="userImage" style="background-image: url({{asset('/build/Images/user-regularB.df1377b9.png')}});">

        </div>
        <div id="userName">
            {{username}}
        </div>

        <div id="rating" class="column">
            <h1>Ratings</h1>
            <div class="column center">
                {% if isVendor %}
                <!-- visualizzeremo le stelle -->
                {% else %}
                        {% if app.user.userIdentifier == username %}
                        <p>You have not sold anything</p>
                        <a class="aButton" href="/editproduct/new">Start selling</a>
                        {% else %}
                        This User has not sold anything
                        {% endif %}
                {% endif %}
            </div>
            

        </div>
        {% if app.user.userIdentifier == username %}
            <a class="aButton">Add product</a>
            <a href="/settings" class="aButton">Settings</a>
        {% endif %}
    </div>
    
    <div class="column container" style="width: 58vw;">
        {% if products|length %}
                {% for product in products %}
                 baby
                {% endfor %}
                {% else %}
                    <div class="center column" style="z-index: 2;">
                        {% if app.user.userIdentifier == username %}
                        <p>Here, products sold by you will appear</p>
                        {% else %}
                        <p>Here, products sold by {{username}} will appear</p>
                        {% endif %}
                    </div>
                {% endif %}
    </div>


</div>

{% endblock %}