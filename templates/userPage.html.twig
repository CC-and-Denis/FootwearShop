{% extends 'pageFrame.html.twig' %}

{% block title %}
    Nike Air Force Limited edition
{% endblock %}


{% block style %}
<style>


.container{
        background-color: rgba(255,255,255,0.2);
        backdrop-filter: blur(35px);
        border-radius: 20px;
        padding: 2vh 5vh;
        height: 88vh;

}

#profilePic{
    width: 20vh;
    height: 20vh;
    margin-bottom: 2vh;
}

#rating{
    background-color: rgba(255,255,255,0.5);
        backdrop-filter: blur(35px);
        border-radius: 18px;
        padding: 2vh 5vh;
        height: 40vh;
        width: 15vw;

}

#rating>h1{
    display: block;
    font-size: 4vh;
    text-align: center;
    font-weight: 400;
}

#userName{
    font-size: 4vh;
    margin-bottom: 2vh;
    font-weight: 600;
    color: rgba(255,255,255,1);
}

.aButton{
    margin-top: 2vh;
    height: 3vh;
    padding-top: 0.3vh;
    padding-bottom: 0vh;
}

#bubble{
    width: 80vh;
    height: 80vh;
    position: absolute;
    background-image: linear-gradient(to top left, rgba(255, 255, 255, 0),rgba(255, 255, 255, 0.5));
    border-radius: 100%;
    animation-name: rotate;
    animation-duration: 10s;
    animation-timing-function: linear;
    animation-iteration-count: infinite;
    margin-left: 9vw;
    z-index: 1;
}

</style>
{% endblock %}

{% block javascripts %}
<script>

</script>
{% endblock %}

{% block content %}
<div class="row" style="padding: 5vh;overflow-x: hidden;
    overflow-y: hidden;">

    <div class="column container" style=" width: 20vw;margin-right: 3vh; align-items: center;">
        <div id="profilePic" class="userImage" style="background-image: url(/Images/user-regularB.png);">

        </div>
        <div id="userName">
            {{username}}
        </div>

        <div id="rating" class="column">
            <h1>Ratings</h1>
            <div class="column center">
                {% if isVendor %}
                <!-- visualizzeremo le stelle -->
                {% else %}
                        {% if app.user.userIdentifier == username %}
                        <p>You have not sold anything</p>
                        <a class="aButton">Start selling</a>
                        {% else %}
                        This User has not sold anything
                        {% endif %}
                {% endif %}
            </div>
            

        </div>
        {% if app.user.userIdentifier == username %}
            <a class="aButton">Add product</a>
            <a href="/settings" class="aButton">Settings</a>
        {% endif %}
    </div>
    
    <div class="column container" style="width: 58vw;">
        {% if products|length %}
                {% for product in products %}
                 baby
                {% endfor %}
                {% else %}
                    <div class="center column" style="z-index: 2;">
                        {% if app.user.userIdentifier == username %}
                        <p>here will appear products sold by you</p>
                        {% else %}
                            here will appear products sold by this user
                        {% endif %}
                    </div>
                {% endif %}
    </div>


</div>

{% endblock %}