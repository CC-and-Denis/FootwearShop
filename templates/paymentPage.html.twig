{# templates/payment/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Payment{% endblock %}

{% block stylesheets %}
    <style>
        div{
            margin-top: 5px;
             margin-bottom: 5px;
        }
        body {
            background-color: #f0f8ff; /* Light Blue */
            color: #333; /* Darker text color for better readability */
            margin: 0; /* Remove default body margin */
            display: flex; /* Enable flexbox */
            justify-content: center; /* Center horizontally */
            align-items: center; /* Center vertically */
            height: 100vh; /* Full viewport height */
        }

        .container {
            max-width: 600px;
            padding: 20px;
            background-color: #ffffff; /* White background for the form */
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        h1 {
            color: #007bff; /* Light Blue */
            text-align: center;
        }

        .form-group {
            margin-bottom: 1rem;
        }

        .form-control {
            border-radius: 4px;
            border: 1px solid #ced4da;
            margin-left: 20px;
            padding: 0.5rem;
        }

        .btn-primary {
            background-color: #007bff; /* Light Blue */
            border: none;
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 4px;
            cursor: pointer;
        }

        .btn-primary:hover {
            background-color: #0056b3; /* Darker Blue */
        }

        .alert {
            padding: 0.75rem 1.25rem;
            margin-bottom: 1rem;
            border: 1px solid transparent;
            border-radius: 4px;
        }

        .alert-success {
            color: #155724;
            background-color: #d4edda;
            border-color: #c3e6cb;
        }

        .alert-danger {
            color: #721c24;
            background-color: #f8d7da;
            border-color: #f5c6cb;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Make a Payment</h1>

        {{ form_start(form) }}
            {{ form_row(form.cardNumber, { 'attr': { 'class': 'form-control' } }) }}
            {{ form_row(form.expMonth, { 'attr': { 'class': 'form-control' } }) }}
            {{ form_row(form.expYear, { 'attr': { 'class': 'form-control' } }) }}
            {{ form_row(form.cvc, { 'attr': { 'class': 'form-control' } }) }}
            {{ form_row(form.submit, { 'attr': { 'class': 'btn-primary' } }) }}
        {{ form_end(form) }}

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}
    </div>
{% endblock %}
