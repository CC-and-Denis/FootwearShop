{% extends 'bases/page_frame.html.twig' %}

{% block style %}
<style>

    #grid-container {
        display: grid;
        grid-template-columns: repeat(4, auto);
        row-gap: 1vh;
        column-gap: 2.5vw;
        padding-right: 0vh;
        padding-left: 1vh;
        margin-right: 1vw;
        height: 84.5vh;
        max-width: 92vw;
    }

    .productCard{
        background-color: rgba(255,255,255,0.4);
        backdrop-filter: blur(20px);
        display:block;
        padding-right: 0;
        background-size: cover; 
        height: 42vh;
        width: 42vh;
        border-radius: 15px;
        border: 1px solid rgba(255,255,255,0.1);
    }


    .productCard:hover>.productInfo{
        opacity: 1;
    }

    .productInfo{
        opacity: 0;
        border-radius: 0px 0px 15px 15px;
        margin-top: 17.5vh;
        height:19.5vh;
        background-color: rgba(255,255,255,0.4);
        backdrop-filter: blur(20px);
        padding: 0.5vh 1vh ;

    }

    .productPriceFast{
        margin-top: 1vh;
        margin-left: 1vh;
        width: max-content;
        padding-left:1vw ;
        padding-right: 1vw;
        border-radius: 100px;
        font-size: 2.5vh;
        background-color: rgba(255,255,255,0.4);
        backdrop-filter: blur(20px);
        color: rgba(0,0,0,0.7);
    }

    .productInfo>.user{
        font-size: 2.5vh;
        margin-top: 0.5vh;
        text-decoration: underline;
    }

    .scrollable{
        margin-top: 8vh;
    }

    @media (min-height: 935px) {
    .productCard{
        height: 37vh;
        width: 37vh;
        margin-top: 5vh;
    }

    .productInfo{
        height:18.8vh;
        margin-top: 13.5vh;
    }

    #grid-container{
        height: 85vh;
    }

    
}




</style>
{% endblock%}




{% block content %}
<div class="scrollable" id="scrollable">
    <div id="grid-container">

    </div>
</div>

{% endblock%}

