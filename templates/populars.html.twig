{% extends 'pageFrame.html.twig' %}

{% block style %}
<style>

    #grid-container {
      display: grid;
      grid-template-columns: repeat(4, auto);
      grid-gap: 2vh 1vh;
      padding: 1vh 1vh;
      padding-right: 0vh;
      height: 85vh;
    }

    .productCard{
    display:block;
    padding-right: 0;
    background-size: cover; 
    background-repeat: no-repeat;
    background-position: center;
    height: 44vh;
    width: 44vh;
    border-radius: 15px;
    margin-right: 1.5vw;
    border: 1px solid rgba(255,255,255,0.1);"
    }


    .productCard:hover>.productInfo{
        opacity: 1;
    }

    .productInfo{
        opacity: 0;
        border-radius: 0px 0px 15px 15px;
        margin-top: 17.5vh;
        height:22vh;
        background-color: rgba(255,255,255,0.4);
        backdrop-filter: blur(20px);
        padding: 0.5vh 1vh ;

    }

    .productPriceFast{
        margin-top: 1vh;
        margin-left: 1vh;
        width: max-content;
        padding-left:1vw ;
        padding-right: 1vw;
        border-radius: 100px;
        font-size: 2.5vh;
        background-color: rgba(255,255,255,0.4);
        backdrop-filter: blur(20px);
        color: rgba(0,0,0,0.7);
    }

    .productInfo>.user{
        font-size: 2.5vh;
        margin-top: 1vh;
        text-decoration: underline;
    }

    .scrollable{
        margin-top: 5vh;
    }




</style>
{% endblock%}




{% block content %}
<div class="scrollable" id="scrollable">
    <div id="grid-container">

    </div>
</div>

{% endblock%}

